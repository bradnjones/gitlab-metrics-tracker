{
  "name": "gitlab-metrics-tracker",
  "version": "2.0.0",
  "description": "GitLab Sprint Metrics Tracker with Clean Architecture and TDD",
  "type": "module",
  "main": "src/server/app.js",
  "scripts": {
    "start": "node src/server/app.js",
    "dev": "nodemon --signal SIGTERM src/server/app.js",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "lint": "eslint src/**/*.{js,jsx}",
    "format": "prettier --write \"src/**/*.{js,jsx,css}\""
  },
  "keywords": ["gitlab", "metrics", "sprint", "analytics", "clean-architecture"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.0",
    "graphql-request": "^6.1.0",
    "dotenv": "^16.3.0",
    "simple-statistics": "^7.8.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "styled-components": "^6.1.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-react": "^7.23.0",
    "@testing-library/react": "^14.1.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@vitejs/plugin-react": "^4.2.0",
    "vite": "^5.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "eslint": "^8.54.0",
    "eslint-plugin-react": "^7.33.0",
    "prettier": "^3.1.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {},
    "moduleNameMapper": {
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    },
    "setupFilesAfterEnv": ["<rootDir>/src/test/setup.js"],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/**/*.test.{js,jsx}",
      "!src/test/**",
      "!src/public/**"
    ],
    "coverageThresholds": {
      "global": {
        "branches": 85,
        "functions": 85,
        "lines": 85,
        "statements": 85
      }
    }
  }
}
